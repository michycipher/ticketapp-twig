{# templates/auth/login.twig #}
{% extends "layout.twig" %}
{% block body %}
  <main class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-Purple-700 mb-4 text-center">Welcome back</h2>
    
    <form method="post" class="mt-6" novalidate>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        <span class="text-sm">Email</span>
        <input id="email" name="email" type="email" value="{{ old.email|default('') }}" class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-200"/>
      </label>

        {% if errors.email %}
          <p class="text-red-600 text-sm mt-1">{{ errors.email }}</p>
        {% endif %}
    </div>

<div>
      <label class="block text-sm font-medium text-gray-700 my-1">
        <span class="text-sm">Password</span>
        <input  id="password" name="password" type="password" class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-200" />
      </label>

        {% if errors.password %}
          <p class="text-red-600 text-sm mt-1">{{ errors.password }}</p>
        {% endif %}
</div>

      <div class="mt-6 flex flex-col items-center justify-between">
        <button class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 focus:outline-none" type="submit">Login</button>
      
        <p class="text-center text-sm text-gray-600 mt-4">
          Donâ€™t have an account?
        <a href="/auth/register" class="text-purple-600 font-semibold">
          Sign Up
        </a>
        </p>
      </div>

    </form>

    </div>
  </main>
{% endblock %}
